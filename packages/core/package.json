{
  "name": "@witty-creatures/solidity-contracts",
  "version": "1.0.0",
  "description": "Witty creatures Solidity Contracts",
  "author": "Witnet Devs <devs@witnet.io>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "compile": "truffle compile",
    "console": "truffle console",
    "fmt": "solhint --max-warnings 0 \"contracts/**/*.sol\" && yarn fmt:js && solhint \"test/**/*.sol\"",
    "fmt!": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix && yarn fmt:js! && solhint \"test/**/*.sol\" --fix",
    "fmt:js": "eslint test --ext .js,.ts,.cjs --ignore-path .gitignore",
    "fmt:js!": "eslint test --ext .js,.ts,.cjs --fix --ignore-path .gitignore",
    "lint": "yarn fmt!",
    "migrate": "truffle migrate",
    "test": "truffle test",
    "test:unit": "echo 'TBD'"
  },
  "keywords": [],
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "witnet-solidity-bridge": "~0.5.4"
  },
  "devDependencies": {
    "chai": "4.3.6",
    "solhint": "3.3.7",
    "truffle": "^5.5.15",
    "truffle-assertions": "0.9.2",
    "truffle-flattener": "https://github.com/witnet/truffle-flattener.git#single-experimental"
  }
}
